<header class="navbar navbar-fixed-top" id="header">
  <div class="container">
    <i><%= link_to "Task App", root_path, id: "logo" %></i>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, class: "header-list" %></li>
        <% if logged_in? %>
          <li><%= link_to "利用者一覧", users_path, class: "header-list"  %></li>
          
          <!--<li><%= link_to "ログイン", '#', class: "header-list" %></li>-->
